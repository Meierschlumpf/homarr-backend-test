{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {
      "@fily-cloud/common": ["../../packages/common"],
      "@fily-cloud/common/*": ["../../packages/common/*"],
      "@fily-cloud/core": ["../../packages/core"],
      "@fily-cloud/core/*": ["../../packages/core/*"],
      "@nestjs/microservices": ["../../packages/microservices"],
      "@nestjs/microservices/*": ["../../packages/microservices/*"],
      "@fily-cloud/websockets": ["../../packages/websockets"],
      "@fily-cloud/websockets/*": ["../../packages/websockets/*"],
      "@fily-cloud/testing": ["../../packages/testing"],
      "@fily-cloud/testing/*": ["../../packages/testing/*"],
      "@nestjs/platform-express": ["../../packages/platform-express"],
      "@nestjs/platform-express/*": ["../../packages/platform-express/*"],
      "@nestjs/platform-socket.io": ["../../packages/platform-socket.io"],
      "@nestjs/platform-socket.io/*": ["../../packages/platform-socket.io/*"],
      "@nestjs/platform-ws": ["../../packages/platform-ws"],
      "@nestjs/platform-ws/*": ["../../packages/platform-ws/*"]
    }
  },
  "include": ["src/**/*", "e2e/**/*"],
  "exclude": ["node_modules"]
}
