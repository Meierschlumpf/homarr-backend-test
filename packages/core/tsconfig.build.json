{
  "extends": "../tsconfig.build.json",
  "compilerOptions": {
    "outDir": ".",
    "rootDir": ".",
    "paths": {
      "@fily-cloud/common": ["../common"],
      "@fily-cloud/common/*": ["../common/*"],
      "@nestjs/microservices": ["../microservices"],
      "@nestjs/microservices/*": ["../microservices/*"],
      "@fily-cloud/websockets": ["../websockets"],
      "@fily-cloud/websockets/*": ["../websockets/*"]
    }
  },
  "exclude": ["node_modules", "dist", "test/**/*", "*.spec.ts"],
  "references": [
    {
      "path": "../common/tsconfig.build.json"
    }
  ]
}
